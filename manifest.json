{
  "name": "Bannerboy Fallback Generator",
  "version": "0.4",
  "description": "Create fallbacks",
  "background": {
    "persistent": false,
    "scripts": ["canvas-to-blob.js","background.js"]
  },

  "browser_action": {
      "default_icon": "camera_48.png",
      "default_title": "Take a screen shot!",
      "default_popup": "popup.html"  
    },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "downloads",
    "http://*/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
    "matches": [
        "<all_urls>"
        ],
    "js": ["mousetrap.min.js","content.js"],
    "run_at": "document_end"
    }
  ],
  "commands": {
    "save" : {
        "suggested_key": {
             "default": "Ctrl+Shift+Y",
              "mac": "Command+Shift+Y"
        },
        "description": "Make a screenshot"
    }
  },
  "manifest_version": 2
}
